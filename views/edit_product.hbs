<div id="page-wrapper" style="padding-left: 15px;padding-right: 15px">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit Product</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    {{products.visibilitytype}}
    <div class="row">
        <div class="col-lg-12 col-md-12">
           <form method="POST" action="/products/edit/{{products.id}}" enctype="multipart/form-data" class="product-add-form" id="">
                <div class="col-lg-8 Regular shadow custom-edit-product">
                    <div class="alert alert-success productsuccess" style="display:none;"></div>
                    <div class="alert alert-danger productdanger" style="display:none;"></div>
                    <div class="title-descripion">
                         <div id="form-group">
                            <label>Edit Serial number: <span>*</span></label>
                            <input class="form-control" name="productid" type="text" id="productid" autocomplete="off" value="{{products.productid.id}}">
                            <span class="form_error">Please enter serial number</span>
                        </div>
                        <div id="form-group">
                            <label>Title: <span>*</span></label>
                            <input class="form-control" name="producttitle" type="text" id="producttitle" autocomplete="off" value="{{products.productid.producttitle}}">
                            <span class="form_error">Please enter Product Name</span>
                        </div>
                        <div id="form-group">
                            <label>Barcode: <span>*</span></label>
                            <input class="form-control" name="barcode" type="text" id="barcode" autocomplete="off" value="{{products.barcode}}">
                            <span class="form_error">Please enter the barcode number</span>
                        </div>
                        <div id="form-group">
                            <label>Description:</label>
                            <textarea class="form-control" name="productdescription" id="productbody" row="10" column="10">{{products.productid.productdescription}}</textarea>
                        </div>
                    </div>
                    <div id="woocommerce-product-data" class="postbox ">
                        <h2 class="hndle ui-sortable-handle">
                            <span>Product data<span class="type_box "> 
                                    <label for="product-type">
                                        <select id="product-type" name="producttype">
                                            <optgroup label="Product Type">
                                                {{#select products.producttype}}
                                                <option value="simple">Simple product</option>
                                                <option value="variable">Variable product</option>
                                                {{/select}}
                                            </optgroup>
                                        </select>
                                    </label>
                                </span>
                            </span>
                        </h2>
                        <h2 class="hndle ui-sortable-handle">
                            <span>Visibility<span class="type_box "> 
                                    <label for="visibility-type">
                                        <select id="visibility-type" name="visibilitytype">
                                            <optgroup label="Visibility">
                                                {{#select products.visibilitytype}}
                                                <option value="show">Show</option>
                                                <option value="hide" >Hide</option>
                                                 {{/select}}
                                            </optgroup>
                                        </select>
                                    </label>
                                </span>
                            </span>
                        </h2>
                        <h2 class="hndle ui-sortable-handle">
                            <span>Type of product<span class="type_box "> 
                                    <label for="featured-type">
                                        <select id="featured-type" name="type">
                                            <optgroup label="Type">
                                                {{#select products.type}}
                                                <option value="normal">Normal</option>
                                                <option value="featured">Featured</option>
                                                {{/select}}
                                            </optgroup>
                                        </select>
                                    </label>
                                </span>
                            </span>
                        </h2>
                        <div class="inside">
                            <div class="panel-wrap product_data">
                                <ul class="product_data_tabs wc-tabs">
                                    <li class="general_options general_tab active">
                                        <a href="javascript:void(0)" data-tab-id="general_product_data" class="active btn-secondary"><span>General</span></a>
                                    </li>
                                    <li class="inventory_options inventory_tab">
				                        <a href="javascript:void(0)" data-tab-id="inventory_product_data"><span>Inventory</span></a>
			                        </li>
                                    <li class="shipping_options shipping_tab">
                                        <a href="javascript:void(0)" data-tab-id="shipping_product_data"><span>Shipping</span></a>
                                    </li>

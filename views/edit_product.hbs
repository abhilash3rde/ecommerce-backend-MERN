                        </div>
                    </div>
                    <div class="category-section">
                        <div class="section-heading">
                            <h2>Product Category</h2>
                        </div>
                        <div class="section-inside">
                            <select name="categoryid" class="prod-cat">
                                <option value="">Select Category</option>
                                {{#each categories}}
                                    <option value="{{this._id}}" {{#equal ../products.categoryid.[0]._id this._id}}selected="selected"{{/equal}}>{{this.categorytitle}}</option>

                    <div class="attribute-content-section">
                        <div id="form-group">
                            <label>Attribute One Title:</label>
                            <input type="text" class="attribute-one-title form-control" name="page_attribute[0][title]" />
                        </div>
                        <div id="form-group">
                            <label>Attribute One Description:</label>
                            <textarea class="form-control attribute-one-description" name="page_attribute[0][description]" row="10" column="10"></textarea>
                        </div>
                        <div id="form-group">
                            <label>Attribute Two Title:</label>
                            <input type="text" class="attribute-two-title form-control" name="page_attribute[1][title]" />
                        </div>
                        <div id="form-group">
                            <label>Attribute Two Description:</label>
                            <textarea class="form-control attribute-two-description" name="page_attribute[1][description]" row="10" column="10"></textarea>
                        </div>
                        <div id="form-group">
                            <label>Attribute Three Title:</label>
                            <input type="text" class="attribute-three-title form-control" name="page_attribute[2][title]" />
                        </div>
                        <div id="form-group">
                            <label>Attribute Three Description:</label>
                            <textarea class="form-control attribute-three-description" name="page_attribute[2][description]" row="10" column="10"></textarea>
                        </div>
                        <div id="form-group">
                            <label>Attribute Four Title:</label>
                            <input type="text" class="attribute-four-title form-control" name="page_attribute[3][title]" />
                        </div>
                        <div id="form-group">
                            <label>Attribute Four Description:</label>
                            <textarea class="form-control attribute-four-description" name="page_attribute[3][description]" row="10" column="10"></textarea>
                        </div>
                        <div id="form-group">
                            <label>key ingredients:</label>
                            <textarea class="form-control" name="keyingredients" id="keyingredients" row="10" column="10"></textarea>
                        </div>
                        <div id="form-group" class="faq-section">
                            <label>FAQ:</label>
                            <div class="section-inside">
                                <div id="clonedfaq" class="clonedfaq">
                                    <div class="faq-question-rept">
                                        <div class="faq-label">
                                            <label>
                                                FAQ Title 1
                                            </label>
                                            <input type="text" name="faq[0][title]" class="faq-title-field" data-repid="0">
                                        </div>
                                        <div class="faq-description">
                                            <label>
                                                FAQ Descripiton 1
                                            </label>
                                            <textarea class="form-control" name="faq[0][description]" class="faq-description-field" row="5" column="5"></textarea>  
                                        </div>
                                    </div>
                                    <div class="actions">
                                        <button type="button" class="clone-faq" data-repid="0">Clone</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="publish-section">
                        <div class="section-heading">
                            <h2>Publish</h2>
                        </div>
                        <div class="section-inside">
                            <input type="submit" value="Submit" class="product-submit">
                        </div>
                    </div>
                    <div class="category-section">
                        <div class="section-heading">
                            <h2>Product Category</h2>
                        </div>
                        <div class="section-inside">
                            <select name="categoryid" class="prod-cat" multiple>
                                <option value="">Select Category</option>
                                {{#each categories}}
                                    <option value="{{this._id}}">{{this.categorytitle}}</option>
                                {{/each}}
                            </select>   
                        </div>
                    </div>
                    <div class="country-section">
                        <div class="secttion-heading">
                            <h2>Blocked Countries</h2>
                        </div>
                        <div class="section-inside">
                            <div id="page-form-group">
                                <select name="blockedcountries" class="edit-blokced-country" multiple>
                                    <option value="">Please Select</option>
                                    {{#each countries as |countriesValue countrieskey|}}
                                        <option value="{{countriesValue}}">{{countriesValue}}</option> 
                                    {{/each}}
                                </select>  
                            </div>
                        </div>
                    </div>
                    <div class="feature-image-section">
                        <div class="section-heading">
                            <h2>Product Image</h2>
                        </div>
                        <div class="section-inside">
                            <input type="file" name="feature_image" class="prod-feature-img">
                        </div>
                    </div>
                    <div class="gallery-image-section">
                        <div class="section-heading">
                            <h2>Product Gallery</h2>
                        </div>
                        <div class="section-inside">
                            <div id="clonedInput" class="clonedInput">
                                <div class="prod-gallery-rept">
                                    <input type="file" name="product_gallery_img[0]" class="product-gallery-img" data-repid="0">
                                </div>
                                <div class="actions">
                                    <button type="button" class="clone" data-repid="0">Clone</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>

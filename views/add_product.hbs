                                <div id="product_attributes" class="panel woocommerce_options_panel" style="display: none;">
                                    <div class="toolbar toolbar-top">
                                        <span class="expand-close">
                                            <a href="#" class="expand_all">Expand</a> / <a href="#" class="close_all">Close</a>
                                        </span>
                                        <select name="attribute_taxonomy" class="attribute_taxonomy">
                                            {{#each attributes as |value key|}}
                                                <option value="{{this.slug}}" data-rel="{{key}}">{{this.name}}</option>
                                            {{/each}}
                                        </select>
                                        <button type="button" class="button add_attribute">Add</button>
                                    </div>
                                    <div class="product_attributes wc-metaboxes ui-sortable">
                                        
                                    </div>
                                    <div class="toolbar attribute_add_btn" style="display: none;">
                                        <button type="button" class="button save_attributes button-primary">Save attributes</button>
                                    </div>
